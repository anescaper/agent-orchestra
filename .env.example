# Client mode: "claude-code" (free, uses claude CLI) or "api" (paid, uses Anthropic HTTP API)
CLIENT_MODE=claude-code

# Anthropic API key (only required when CLIENT_MODE=api)
ANTHROPIC_API_KEY=your_api_key_here

# Orchestrator Configuration
ORCHESTRATOR_MODE=auto  # Options: auto, research, analysis, monitoring

# Logging
RUST_LOG=info  # Options: trace, debug, info, warn, error

# DigitalOcean (optional, for deployment)
DO_API_TOKEN=your_digitalocean_token_here
DO_APP_ID=your_app_id_here

# Agent Teams Configuration
CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS=1  # Enable Agent Teams feature
TEAM_DEFAULT=feature-dev                # Default team template
TEAM_MAX_AGENTS=5                       # Max concurrent agents per team
TEAM_TIMEOUT=600                        # Team session timeout in seconds

# Dashboard
DASHBOARD_PORT=8080                     # Dashboard server port
